{
    "name": "battis/stylize",
    "description": "Append styles to a webpage for embedding elsewhere",
    "version": "0.5.0",
    "license": "GPL-3.0",
    "autoload": {
        "psr-4": {
            "Battis\\Stylize\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Seth Battis",
            "email": "seth@battis.net"
        }
    ],
    "require": {
